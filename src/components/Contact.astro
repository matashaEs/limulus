---
import ContactImg from "../assets/Contact.png";
import Location from "../assets/icons/location-white.svg";
import Linkedin from "../assets/icons/linkedin.svg";
import Facebook from "../assets/icons/facebook.svg";
import Twitter from "../assets/icons/twitter.svg";
---

<section class="contact">
  <div class="container">
    <h2>Skontaktuj siÄ™ z nami</h2>
    <div class="contact-content">
      <div class="contact-info">
        <p class="contct-firm">Cognitum Services S.A.</p>
        <a class="contact-mail p" href="mailto:office@cognitum.eu"
          >office@cognitum.eu</a
        >
        <div class="contact-location">
          <img
            class="contact-location-icon"
            src={Location.src}
            alt="Lokalizacja"
          />
          <p>Warszawa ul. Krucza 16/22, 00-526</p>
        </div>
        <div class="contact-social">
          <img src={Linkedin.src} alt="Linkedin" />
          <img src={Facebook.src} alt="Facebook" />
          <img src={Twitter.src} alt="Twitter" />
        </div>
      </div>
      <div class="contact-image">
        <img src={ContactImg.src} alt="Office" />
      </div>
    </div>
  </div>
</section>
